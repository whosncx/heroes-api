{
    "compilerOptions": {
      "typeRoots": ["./types", "./node_modules/@types"],
      "types": ["node", "jest"],
      "outDir": "./dist",
      "target": "es2021",
      "allowJs": true,
      "strict": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule":true
    },
    "include": ["./src/**/*.tsx", "./src/**/*.ts", "./src/**/*.css", "./src/**/*.json"],
    "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]  
  }